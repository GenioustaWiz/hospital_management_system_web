{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS"
    },
    "env": {
      "DEBUG": "false"  // Make sure DEBUG is set to false in production
    },
    "deploy": {
      "startCommand": "python manage.py migrate && python manage.py collectstatic --noinput && gunicorn hospital_management_webapp.wsgi",
      "web": "gunicorn hospital_management_webapp.wsgi:application",
      "services": [
        {
          "id": "nginx",
          "name": "Nginx",
          "docker": {
            "build": "nginx.Dockerfile",
            "ports": ["8080:80"],
            "volumes": [
              { "type": "static", "value": "/app/static", "path": "/static" },
              { "type": "static", "value": "/app/media", "path": "/media" }
            ]
          }
        }
      ]
    }
  }
  